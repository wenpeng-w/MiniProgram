.line2 {
  -webkit-line-clamp: 2;
}
.line3 {
  -webkit-line-clamp: 3;
}
.home-page {
  padding: 0;
}
.arct-list-container {
  width: 100%;
  min-height: 100%;
}
.arct-list-content {
  position: relative;
  background-color: #fff;
}
.arct-item {
  padding: 0 26rpx;
}
.item-content {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #0000001a;
}
.arct-item:last-child .item-content{
  border: 0;
}
.acrt-h2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  font-size: 13pt;
  line-height: 46rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.arct-pic-wrap {
  height: 160rpx;
}
.arct-meta {
  margin-top: 14rpx;
  line-height: 1;
  font-size: 9pt;
  color: #999;
}
.space {
  margin-right: 10rpx;
}
.item-content.pic3 .arct-pic-wrap {
  display: flex;
  overflow: hidden;
  margin-top: 12rpx;
  /* border-radius: 6rpx; */
}
.item-content image {
  flex: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 6rpx;
  background-color: #f0f0f0;
}
.item-content.pic3  image:first-child {
  margin-right: 6rpx;
}
.item-content.pic3  image:last-child {
  margin-left: 6rpx;
}
.item-content.pic1 {
  display: flex;
  align-items: center;
}
.item-content.pic1 .item-left {
  flex: 1;
  margin-right: 12rpx;
}
.item-content.pic1 .arct-pic-wrap {
  width: 33.333334%;
}