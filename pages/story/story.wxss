/* pages/story/story.wxss */
.line2 {
  -webkit-line-clamp: 2;
}
.story-page {
  display: block;
}
.ad-contaiber {
  width: 100%;
  height: 340rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  background-color: #ffffff;
}
.ad-swiper {
  position: relative;
  height: 100%;
}
.ad-slide-item {
  padding: 0 14rpx;
  box-sizing: border-box;
}
/* 修改 swiper 面板指示点 */
.ad-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  margin-left: -10rpx;
}
.ad-swiper .wx-swiper-dot-active {
  width: 20rpx;
  height: 6rpx;
  margin-top: 1rpx;
  border-radius: 4rpx;
}
.ad-swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  width: 100%;
  margin-bottom: -10rpx;
  padding: 0 30rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
}
.ad-slide-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}
/* 类型 */
.story-type {
  display: flex;
  padding: 30rpx 0 0 0;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  background-color: #ffffff;
}
.type-item {
  width: 25%;
  text-align: center;
  margin-bottom: 30rpx;
}
.type-item .type-icon {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
  /* background-color: #f5f5f5; */
  border-radius: 10rpx;
  overflow: hidden;
}
.type-item .type-name {
  font-size: 10pt;
  color: #333333;
  font-weight: 600;
}
.list-content {
  background-color: #ffffff;
  padding: 0 26rpx;
}
.story-item {
  position: relative;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #0000001a;
}
.story-item:last-child {
  border: 0;
}
.story-image {
  display: block;
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.story-title {
  display: -webkit-box;
  margin-top: 14rpx;
  -webkit-box-orient: vertical;
  font-size: 12pt;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.story-meta {
  margin-top: 8rpx;
  line-height: 1;
  font-size: 9pt;
}
.story-time {
  color: #999999;
}
.story-tags {
  position: absolute;
  top: 50rpx;
  right: 20rpx;
  color: #ffffff;
  font-size: 9pt;
}
.story-tags .tag {
  display: inline-block;
  margin-left: 12rpx;
  padding: 0 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #1aad19ee;
  border-top-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  overflow: hidden;
}