/* pages/story/story.wxss */
.story-page {
  background-color: #ffffff;
}
.ad-contaiber {
  width: 100%;
  height: 340rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.ad-swiper {
  position: relative;
  height: 100%;
}
.ad-slide-item {
  padding: 0 14rpx;
  box-sizing: border-box;
}
/* 修改 swiper 面板指示点 */
.ad-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  margin-left: -10rpx;
}
.ad-swiper .wx-swiper-dot-active {
  width: 20rpx;
  height: 6rpx;
  margin-top: 1rpx;
  border-radius: 4rpx;
}
.ad-swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  width: 100%;
  margin-bottom: -10rpx;
  padding: 0 30rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
}
.ad-slide-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}